<UserControl x:Class="TouristBusApp.UserControls.BusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TouristBusApp.UserControls"
             mc:Ignorable="d" d:DesignWidth="300"
             FontSize="24"
             FontFamily="Times New Roman">
    <Border BorderBrush="Black" BorderThickness="2">
        <StackPanel>
            <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                <StackPanel>
                    <Label Content="Номер автобуса" />
                    <TextBlock x:Name="BusNumberTextBlock" TextAlignment="Center" FontSize="48" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                <StackPanel>
                    <Label Content="Вместительность автобуса" />
                    <TextBlock x:Name="BusCapacityTextBlock" TextAlignment="Center" FontSize="48" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
