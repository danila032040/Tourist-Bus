<Window x:Class="TouristBusApp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TouristBusApp.Windows"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="900" 
        Width="1600"
        FontSize="24"
        FontFamily="Times New Roman">
    <Grid>
        <DockPanel 
            LastChildFill="True">
            <Grid 
                Height="100"
                DockPanel.Dock="Top">
                <StackPanel 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="5">
                    <Button
                        x:Name="_buttonSignIn"
                        Width="300"
                        Content="Войти"
                        Margin="5" 
                        Click="ButtonSignIn_OnClick"/>
                    <Button 
                        x:Name="_buttonRegister"
                        Width="300"
                        Content="Регистрация"
                        Margin="5" 
                        Click="ButtonRegister_OnClick"/>
                </StackPanel>
            </Grid>
            <Grid />
        </DockPanel>
    </Grid>
</Window>